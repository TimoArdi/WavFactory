{% extends 'base.html.twig' %}

{% block title %}Instrumental index{% endblock %}

{% block body %}
    <table class="table table-light table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Bpm</th>
                <th>Link</th>
                <th>Author</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrumental in instrumentals %}
            <tr>
                <td>{{ instrumental.name }}</td>
                <td>{{ instrumental.bpm }}</td>
                <td>{{ instrumental.link }}</td>
                <td>{{ instrumental.author }}</td>
                <td>
                    <a href="{{ path('instrumental_show', {'id': instrumental.id}) }}">Voir plus</a>
                    <a href="{{ path('instrumental_edit', {'id': instrumental.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('instrumental_new') }}">Ajouter une nouvelle instrumentale</a>
{% endblock %}
