{% extends 'base.html.twig' %}
{% block title %} Nos Instrus {% endblock %}
{% block body %}
    <div class="container">
        {% for instru in instrus %}
            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">
                    <div class="col-8">
                    <iframe width="100%" height="400px" src="https://www.youtube.com/embed/{{ instru.link }}" frameborder="0"
                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                    </div>
                    <div class="col-4 offset-1 m-5">
                        <h1>{{ instru.name }}</h1>
                        <h2> by {{ instru.author }}</h2>
                        <p>BPM: {{ instru.bpm }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <div>
            Aucune instru trouv√©e.
            </div>
        {% endfor %}
    </div>
{% endblock %}
